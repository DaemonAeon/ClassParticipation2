<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWeightCaption"
        android:layout_gravity="right"
        android:text="Weight "
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewCriteriaWeight"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCriteriaWeight"
        android:layout_gravity="right"
        android:text="weight"
        android:layout_alignTop="@+id/textViewWeightCaption"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPercentageCaption"
        android:layout_gravity="right"
        android:text="Percentage "
        android:layout_below="@+id/textViewWeightCaption"
        android:layout_toLeftOf="@+id/textViewCriteriaWeight"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCriteriaPercentage"
        android:layout_gravity="right"
        android:text="%"
        android:layout_below="@+id/textViewCriteriaWeight"
        android:layout_toRightOf="@+id/textViewWeightCaption" />


</RelativeLayout>